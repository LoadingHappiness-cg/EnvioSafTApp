<Styles xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <SolidColorBrush x:Key="PrimaryColorBrush" Color="#0078D7"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#0063B1"/>
        <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#CCC"/>
        <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#0078D7"/>
    </Styles.Resources>

    <!-- Botão Primário -->
    <Style Selector="Button.PrimaryButtonStyle">
        <Setter Property="Background" Value="{StaticResource PrimaryColorBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryForegroundBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.PrimaryButtonStyle:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
    </Style>

    <!-- Botão ModernSendButtonStyle -->
    <Style Selector="Button.ModernSendButtonStyle">
        <Setter Property="Height" Value="56"/>
        <Setter Property="MinWidth" Value="220"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="20,8"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#FF4FA3E6" Offset="0"/>
                    <GradientStop Color="#FF1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.ModernSendButtonStyle:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.03)"/>
    </Style>
    <Style Selector="Button.ModernSendButtonStyle:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
        <Setter Property="Opacity" Value="0.95"/>
    </Style>
    <Style Selector="Button.ModernSendButtonStyle:disabled">
        <Setter Property="Opacity" Value="0.85"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>
    <Style Selector="Button.ModernSendButtonStyle:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="#FF4FA3E6" Offset="0"/>
                    <GradientStop Color="#FF1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Botão Secundário -->
    <Style Selector="Button.SecondaryButtonStyle">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#1E88E5"/>
        <Setter Property="BorderBrush" Value="#1E88E5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style Selector="Button.SecondaryButtonStyle:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#E3F2FD"/>
    </Style>
    <Style Selector="Button.SecondaryButtonStyle:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#BBDEFB"/>
    </Style>

    <!-- Botão ModernIconButtonStyle -->
    <Style Selector="Button.ModernIconButtonStyle">
        <Setter Property="Background" Value="#0078D7"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="BorderBrush" Value="#0078D7"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- TextBox -->
    <Style Selector="TextBox.ModernTextBoxStyle">
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="TextBox.ModernTextBoxStyle:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxFocusBorderBrush}"/>
    </Style>

    <!-- PasswordBox -->
    <Style Selector="TextBox.ModernPasswordBoxStyle">
        <Setter Property="PasswordChar" Value="●"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>
    <Style Selector="TextBox.ModernPasswordBoxStyle:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxFocusBorderBrush}"/>
    </Style>

    <!-- ComboBox -->
    <Style Selector="ComboBox.ModernComboBoxStyle">
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderBrush" Value="{StaticResource TextBoxBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <!-- GroupBox using avalonia's HeaderedContentControl or experimental border -->
    <Style Selector="Border.ModernGroupBoxStyle">
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderBrush" Value="#DDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- TextBlock -->
    <Style Selector="TextBlock.HelpHeaderTextStyle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#1E88E5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="10,10,10,20"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

</Styles>
